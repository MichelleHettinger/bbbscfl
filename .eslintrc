{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "rules": {
    "jsx-quotes": [2, "prefer-single"],
    "react/jsx-curly-spacing": [2, "always"],
    "react/prefer-stateless-function": [0],
    "react/jsx-filename-extension": 0,
    "indent": [
      2,
      2,
      {"SwitchCase": 1}
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "windows"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-reserved-keys": 0,
    "no-wrap-func": 0,
    "spaced-line-comment": 0,
    "no-console": 1,
    "spaced-comment": 0,
    "max-len": 0,
    "no-plusplus": 0,
    "arrow-body-style": 0,
    "no-restricted-syntax": 0,
    "no-underscore-dangle": 1,
    // disabled dueto eslint error
    "no-duplicate-case": 0,
    "object-curly-spacing": 0,
    "babel/object-curly-spacing": 0,
    "babel/new-cap": 0,
    "react/forbid-prop-types": 0
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "babel",
    "react"
  ]
}
